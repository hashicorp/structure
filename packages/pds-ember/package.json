{
  "name": "@hashicorp/pds-ember",
  "version": "2.2.0",
  "description": "Ember addon for building Structure-styled UIs",
  "keywords": [
    "ember-addon"
  ],
  "license": "MPL-2.0",
  "author": "Ryan Johnson",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hashicorp/structure.git"
  },
  "bugs": {
    "url": "https://github.com/hashicorp/structure/issues"
  },
  "homepage": "https://github.com/hashicorp/structure#readme",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "scripts": {
    "build": "ember build --environment=production",
    "lint:fix": "npm-run-all --aggregate-output --continue-on-error --parallel lint:*:fix",
    "lint:hbs": "ember-template-lint .",
    "lint:hbs:fix": "ember-template-lint . --fix",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "start": "ember serve",
    "test": "npm-run-all lint test:*",
    "test:ember": "ember test",
    "test:ember-compatibility": "ember try:each",
    "lint-all": "yarn lint:hbs && yarn lint:js",
    "g:component": "ember g pds-component",
    "d:component": "ember d pds-component",
    "storybook": "start-storybook -p 6006 -s dist",
    "build-storybook": "ember build && build-storybook -s dist -o storybook-static",
    "build:ci": "yarn build-storybook --quiet --loglevel warn && sb extract"
  },
  "dependencies": {
    "@ember/render-modifiers": "^1.0.2",
    "@hashicorp/structure-icons": "^1.9.2",
    "broccoli-funnel": "^3.0.3",
    "broccoli-merge-trees": "^4.2.0",
    "ember-auto-import": "^1.6.0",
    "ember-cli-babel": "^7.26.3",
    "ember-cli-htmlbars": "^5.7.1",
    "ember-cli-sass": "^10.0.1",
    "ember-cli-string-utils": "^1.1.0",
    "ember-intl": "^5.5.0",
    "ember-modifier": "^2.1.2",
    "ember-named-blocks-polyfill": "^0.2.4",
    "ember-svg-jar": "^2.2.3",
    "sass": "^1.26.11",
    "tippy.js": "^6.3.1"
  },
  "devDependencies": {
    "@ember/optional-features": "^2.0.0",
    "@ember/test-helpers": "^2.2.5",
    "@embroider/test-setup": "^0.37.0",
    "@glimmer/component": "^1.0.4",
    "@glimmer/tracking": "^1.0.4",
    "@storybook/addon-docs": "^6.1.0",
    "@storybook/addon-essentials": "^6.1.0",
    "@storybook/addon-knobs": "^6.1.0",
    "@storybook/cli": "^6.2.9",
    "@storybook/ember": "^6.1.0",
    "@storybook/ember-cli-storybook": "^0.2.1",
    "babel-eslint": "^10.1.0",
    "broccoli-asset-rev": "^3.0.0",
    "ember-cli": "~3.26.0",
    "ember-cli-dependency-checker": "^3.2.0",
    "ember-cli-inject-live-reload": "^2.0.2",
    "ember-cli-sri": "^2.1.1",
    "ember-cli-string-helpers": "^5.0.0",
    "ember-cli-terser": "^4.0.1",
    "ember-disable-prototype-extensions": "^1.1.3",
    "ember-export-application-global": "^2.0.1",
    "ember-load-initializers": "^2.1.2",
    "ember-maybe-import-regenerator": "^0.1.6",
    "ember-page-title": "^6.2.1",
    "ember-qunit": "^5.1.4",
    "ember-resolver": "^8.0.2",
    "ember-source": "~3.24.0",
    "ember-source-channel-url": "^3.0.0",
    "ember-template-lint": "^3.2.0",
    "ember-try": "^1.4.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-ember": "^10.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "loader.js": "^4.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "qunit": "^2.14.1",
    "qunit-dom": "^1.6.0",
    "sinon": "^9.2.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": "10.* || >= 12"
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "configPath": "tests/dummy/config"
  }
}
