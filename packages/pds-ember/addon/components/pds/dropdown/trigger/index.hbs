{{!-- template-lint-disable simple-unless --}}
{{!--
  NOTE: Button classes must be applied to the <summary> to get
        correct styling of :active and :focus states.
--}}
<summary
  class="
    pds-dropdownTrigger
    pds-button
    pds--iconEnd
    {{this.variantClass}}
    {{if @compact 'pds--compact'}}
    {{if @hideText 'pds--iconOnly'}}
    {{unless (has-block) 'pds--iconOnly'}}
    {{if @isOpen 'pds--open'}}
  "
  ...attributes
  data-test-dropdown-trigger
>
  {{!--
    <span> is required because Safari doesn't apply flexbox to the <summary> element.
    It should receive all Button layout styling, instead of <summary>.
  --}}
  <span class="pds-dropdownTrigger__layoutWrapper">
    {{#if (has-block)}}
      <span
        class="{{if @hideText 'pds--visuallyHidden'}}"
        data-test-dropdown-trigger-block-content
      >
        {{yield}}
      </span>
    {{/if}}

    <Pds::Icon
      @type={{this.icon}}
      class="pds-button__iconEnd pds-dropdownTrigger__icon"
      data-test-dropdown-trigger-icon
    />
  </span>
</summary>
{{!-- template-lint-enable simple-unless --}}
