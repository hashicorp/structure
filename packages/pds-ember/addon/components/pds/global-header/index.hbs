<div
  class="pds-globalHeader"
  ...attributes
  data-test-global-header
>
  {{#if (has-block 'logo')}}
    <div class="pds-globalHeader__logo">
      {{yield to="logo"}}
    </div>
  {{/if}}
  {{#if (has-block 'primary-nav')}}
    <nav
      class="pds-globalHeader__nav pds-globalHeader__primaryNav"
      ...attributes
      data-test-global-header-nav
    >
      {{yield to="primary-nav"}}
    </nav>
  {{/if}}
  {{yield to="extra"}}
  {{#if (has-block 'secondary-nav')}}
    <nav
      class="pds-globalHeader__nav pds-globalHeader__secondaryNav"
      ...attributes
      data-test-global-header-nav
    >
      {{yield to="secondary-nav"}}
    </nav>
  {{/if}}
  {{#if (has-block 'switcher')}}
    <div class="pds-globalHeader__switcher">
      {{yield to="switcher"}}
    </div>
  {{/if}}
  {{#if (has-block "user-menu")}}
    <div class="pds-globalHeader__userMenu">
      {{yield to="user-menu"}}
    </div>
  {{/if}}
</div>