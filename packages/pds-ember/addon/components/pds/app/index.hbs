{{! link should point to <main> (i.e., <App.Body>) }}
{{!template-lint-disable link-href-attributes}}
<a
  href="#content"
  class="pdsSkipLink"
  data-test-app-skip-link
>
  Skip to Content
</a>

<a id="top" data-test-app-top-anchor></a>

<div
  class="
    pds-app
    {{if @showDrawer 'has-open-drawer'}}
  "
  ...attributes
  data-test-app
>
  {{yield (hash
    Banner=(component 'pds/app/banner')
    Body=(component 'pds/app/body')
    Drawer=(component 'pds/app/drawer' open=@showDrawer)
    Footer=(component 'pds/app/footer')
    Header=(component 'pds/app/header')
    ModalArea=(component 'pds/app/modal-area')
    Sidebar=(component 'pds/app/sidebar')
  )}}
</div>
