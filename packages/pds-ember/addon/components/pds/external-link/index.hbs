<a
  class="pds--external"
  rel="noopener noreferrer"
  target="_blank"
  ...attributes
  data-test-external-link
>
  {{#if @hideIcon}}
    {{yield}}
  {{else if @iconStart}}
    <Pds::Icon @type={{@iconStart}} data-test-external-link-icon />
    {{yield}}
  {{else}}
    {{yield}}
    <Pds::Icon @type={{this.iconEnd}} data-test-external-link-icon />
  {{/if}}
</a>
