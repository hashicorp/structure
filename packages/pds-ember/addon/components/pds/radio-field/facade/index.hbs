<div
  class="pds-radioFacade"
  ...attributes
  data-test-radio-facade
>
  <div class="pds-radioFacade__svgWrapper">
    <svg
      viewBox="0 0 16 16"
      xmlns="http://www.w3.org/2000/svg"
    >
      {{! fill=background, stroke=border }}
      <circle
        class="pds-radioFacade__bg"
        stroke="currentColor"
        fill="none"
        stroke-width="1"
        cx="8"
        cy="8"
        r="7.5"
      />

      {{! "tick" (a.k.a. "dot"), fill=background }}
      <circle
        class="pds-radioFacade__tick"
        data-test-radio-facade-tick
        stroke="none"
        cx="8"
        cy="8"
        r="4"
      />
    </svg>
  </div>
</div>