<Pds::App as |App|>
  <App.ModalArea></App.ModalArea>

  <App.Header>
    Header

  <Pds::Dropdown as |D|>
    <D.Trigger>
      Menu
    </D.Trigger>

    <D.Dialog>
        <D.ListItem>
          <Pds::Icon @type="bolt" />
          List Item
        </D.ListItem>
        <D.ListItem>
          <Pds::Button>Button</Pds::Button>
        </D.ListItem>
        <D.ListItem>
          <Pds::CtaLink @route="index">Hello Link</Pds::CtaLink>
        </D.ListItem>
    </D.Dialog>
    
  </Pds::Dropdown>

  </App.Header>

  <App.Banner>Banner</App.Banner>

  <App.Sidebar>
    <Pds::Nav>
      <section>
        <LinkTo @route="index">Home</LinkTo>
        <Pds::ExternalLink href="/tests?hidepassed&dockcontainer">
          Tests
        </Pds::ExternalLink>
      </section>

      <section>
        <header>Components</header>
        <LinkTo @route="components.cta-link">
          CtaLink
        </LinkTo>
      </section>
    </Pds::Nav>
  </App.Sidebar>

  <App.Body>
    {{outlet}}
  </App.Body>

  <App.Footer>Footer</App.Footer>

  <App.Drawer>Drawer</App.Drawer>
</Pds::App>
