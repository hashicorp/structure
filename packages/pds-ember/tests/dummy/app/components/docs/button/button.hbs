<section>
  <h2>&lt;Pds::Button&gt;</h2>

  <div style="display: flex; gap: 16px;">
    {{!-- PRIMARY --}}
    <Pds::Button
      @variant="primary"
      disabled={{@disabled}}
      ...attributes
      data-test-visreg="button-primary"
    >
      Primary
    </Pds::Button>

    {{!-- SECONDARY --}}
    <Pds::Button
      disabled={{@disabled}}
      ...attributes
      data-test-visreg="button-secondary"
    >
      Secondary
    </Pds::Button>

    {{!-- WARNING --}}
    <Pds::Button
      @variant="warning"
      disabled={{@disabled}}
      ...attributes
      data-test-visreg="button-warning"
    >
      Warning
    </Pds::Button>

    {{!-- GHOST --}}
    <Pds::Button
      @variant="ghost"
      disabled={{@disabled}}
      ...attributes
      data-test-visreg="button-ghost"
    >
      Ghost
    </Pds::Button>
  </div>
</section>
