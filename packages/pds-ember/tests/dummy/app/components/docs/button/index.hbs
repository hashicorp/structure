<div class="docs-button">
  <Docs::Button::Button
     @disabled={{@disabled}}
     class="
       {{ if @isActive 'mock-active' }}
       {{ if @isHovered 'mock-hover' }}
       {{ if @isFocused 'mock-focus' }}
     "
     ...attributes
  />

  <Docs::Button::CtaLink
     @disabled={{@disabled}}
     class="
       {{ if @isActive 'mock-active' }}
       {{ if @isHovered 'mock-hover' }}
       {{ if @isFocused 'mock-focus' }}
     "
     ...attributes
  />

  <Docs::Button::DropdownTrigger
     @disabled={{@disabled}}
     class="
       {{ if @isActive 'mock-active' }}
       {{ if @isHovered 'mock-hover' }}
       {{ if @isFocused 'mock-focus' }}
       {{ if @disabled 'pds--disabled' }}
     "
     ...attributes
  />
</div>