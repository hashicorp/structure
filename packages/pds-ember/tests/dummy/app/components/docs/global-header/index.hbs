<Pds::GlobalHeader>
  <:logo>
  <img
    class="pds-globalHeader__logo"
    src="@hashicorp/pds-ember/logomarks/HashiCorp_White.svg"
  />
  </:logo>

  <:switcher>
  <Pds::Dropdown as |S|>
    <S.Trigger>
      Workspace
    </S.Trigger>

    <S.Dialog>
      <section>
        <a href="#">Beta-Project</a>
        <a href="#" class="active">
          <span>MyProject_1</span>
          <small>(current)</small>
        </a>
        <a href="#">
          MyProject_2
        </a>
      </section>
      <section>
        <a href="#">
          View All Projects
        </a>
      </section>
    </S.Dialog>
  </Pds::Dropdown>
  </:switcher>

  <:primary-nav>
    <a href="#" class="active">Section 1</a>
    <a href="#">Section 2</a>
    <a href="#">Section 3</a>
  </:primary-nav>

  <:secondary-nav>
    <a href="#">Link</a>
    <a href="#" class="pds--iconOnly">
      <Pds::Icon @type="help-circle-outline" />
      <span class="pds--visuallyHidden">Icon Link</span>
    </a>
  </:secondary-nav>

  <:user-menu>
  <Pds::Dropdown @align="right" as |M|>
    <M.Trigger>
      <Pds::Avatar />
      <span class="pds--visuallyHidden">
        User Menu
      </span>
    </M.Trigger>

    <M.Dialog>
      <section>
        <header>User</header>
        <M.ListItem>
          Signed in as<br />
          <b>user@example.com</b>
        </M.ListItem>
      </section>

      <section>
        <Pds::Button>
          Log Out
        </Pds::Button>
      </section>
    </M.Dialog>
  </Pds::Dropdown>
  </:user-menu>

  {{! extra content }}
  <:extra>{{yield}}</:extra>
</Pds::GlobalHeader>
