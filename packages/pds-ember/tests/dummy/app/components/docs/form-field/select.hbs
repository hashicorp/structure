<div class="docs-formField-select pds-formField">
  <label for="ctrlSelect" class="pds-fieldName">
    Select
  </label>

  {{#if @showHelp}}
    <Pds::HelpText id="helpSelect">
      This is some help text.
    </Pds::HelpText>
  {{/if}}

  <Pds::Select
    aria-describedby="helpSelect errSelect"
    id="ctrlSelect"
    @invalid={{@isInvalid}}
    ...attributes
  >
    <option value="">(select an option)</option>
    <option value="Dewey">Dewey</option>
    <option value="Cheetum">Cheetum</option>
    <option value="Enhowe">Enhowe</option>
    <option value="pangram">
      The quick brown fox<br />
      jumps over the lazy dog.
    </option>
  </Pds::Select>

  {{#if @isInvalid}}
    <Pds::ErrorMessage id="errSelect">
      This is an error message.
    </Pds::ErrorMessage>
  {{/if}}
</div>
