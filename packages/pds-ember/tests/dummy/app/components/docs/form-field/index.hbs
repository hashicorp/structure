<div class="docs-form-field">
  <div class="pds-formField">
    <label
      for="fieldInput"
      class="
        pds-fieldName
        {{if @hideLabel 'pds--visuallyHidden'}}
      "
    >
      {{titleize @type}} Field
    </label>

    {{#if @helpText}}
      <Pds::HelpText id="inputHelp">
        {{@helpText}}
      </Pds::HelpText>
    {{/if}}

    <Pds::Input
      @invalid={{@isInvalid}}
      @type={{@type}}
      aria-describedby="
        {{if @helpText 'inputHelp'}}
        {{if @errorMessage 'inputError'}}
      "
      class="
        {{if @isFocused 'mock-focus'}}
        {{if @isHovered 'mock-hover'}}
      "
      disabled={{@isDisabled}}
      id="fieldInput"
      pds-dirty={{@isDirty}}
      placeholder={{@placeholder}}
      required={{@isRequired}}
      value={{@value}}
    />

    {{#if @errorMessage}}
      <Pds::ErrorMessage id="inputError">
        {{@errorMessage}}
      </Pds::ErrorMessage>
    {{/if}}
  </div>
</div>
